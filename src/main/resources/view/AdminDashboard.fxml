<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.AdminController">
    <center>
        <VBox spacing="10" alignment="center">
            <!-- Title Label -->
            <Label text="Admin Dashboard - Manage Books" style="-fx-font-size: 16px;"/>

            <!-- TableView for displaying books -->
            <TableView fx:id="bookTableView">
                <columns>
                    <TableColumn text="Title" fx:id="titleColumn"/>
                    <TableColumn text="Author" fx:id="authorColumn"/>
                    <TableColumn text="Price (AUD)" fx:id="priceColumn"/>
                    <TableColumn text="Physical Copies" fx:id="copiesColumn"/>
                    <TableColumn text="Sold Copies" fx:id="soldColumn"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10" alignment="center">
            <GridPane hgap="10" vgap="10">
                <!-- Form fields for book details -->
                <Label text="Title:"/>
                <TextField fx:id="titleField"/>
                <Label text="Author:"/>
                <TextField fx:id="authorField"/>
                <Label text="Price (AUD):"/>
                <TextField fx:id="priceField"/>
                <Label text="Physical Copies:"/>
                <TextField fx:id="copiesField"/>
                <Label text="Sold Copies:"/>
                <TextField fx:id="soldField"/>
            </GridPane>

            <!-- Buttons for managing books -->
            <HBox spacing="10" alignment="center">
                <Button text="Add Book" onAction="#addBook"/>
                <Button text="Update Book" onAction="#updateBook"/>
                <Button text="Delete Book" onAction="#deleteBook"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
