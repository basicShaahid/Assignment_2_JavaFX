<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminController" alignment="CENTER" spacing="15">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title Label -->
    <Label text="Admin Dashboard - Book Inventory" style="-fx-font-size: 18px;"/>

    <!-- List of Books in Inventory -->
    <ListView fx:id="bookInventoryListView" prefWidth="300" prefHeight="300"/>

    <!-- Input Field for Updating Stock -->
    <TextField fx:id="stockUpdateField" promptText="Enter new stock value" maxWidth="150"/>

    <!-- Button to Update Stock -->
    <Button text="Update Stock" onAction="#updateStock" maxWidth="120"/>
</VBox>
